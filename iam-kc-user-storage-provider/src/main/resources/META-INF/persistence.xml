<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="iam-user-storage-provider">
    <jta-data-source>java:jboss/datasources/IamDS</jta-data-source>
    
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.AttributeEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.ConfigurationEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.EmailEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.GroupEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.LabelEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.MetadataEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.PhoneNumberEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.RoleEntity</class>
    <class>it.infn.cnaf.sd.iam.persistence.realm.entity.UserEntity</class>
    <class>it.infn.cnaf.sd.iam.kc.persistence.UserRepository</class>

    <properties>
      <property name="hibernate.show_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>
